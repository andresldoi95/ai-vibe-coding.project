# Application
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=billing_inventory
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# SRI Configuration
SRI_ENVIRONMENT=1
# 1 = pruebas (testing)
# 2 = producci√≥n (production)

SRI_WS_RECEPCION_URL=https://celdes.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl
SRI_WS_AUTORIZACION_URL=https://celdes.sri.gob.ec/comprobantes-electronicos-ws/AutorizacionComprobantesOffline?wsdl

# Production URLs (when SRI_ENVIRONMENT=2)
# SRI_WS_RECEPCION_URL=https://cel.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl
# SRI_WS_AUTORIZACION_URL=https://cel.sri.gob.ec/comprobantes-electronicos-ws/AutorizacionComprobantesOffline?wsdl

# File Storage
STORAGE_PATH=./storage
XML_STORAGE_PATH=./storage/xml
PDF_STORAGE_PATH=./storage/pdf
CERTIFICATES_PATH=./storage/certificates

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
# Options: error, warn, info, debug
