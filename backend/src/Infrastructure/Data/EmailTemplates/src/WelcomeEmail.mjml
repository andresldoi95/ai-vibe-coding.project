<mjml>
  <mj-head>
    <mj-title>Welcome to SaaS Platform!</mj-title>
    <mj-preview>Welcome aboard! Get started with your new account and explore all the features we have to offer.</mj-preview>
    <mj-attributes>
      <mj-all font-family="'Segoe UI', 'Helvetica Neue', Arial, sans-serif" />
      <mj-text font-size="14px" color="#374151" line-height="1.6" />
    </mj-attributes>

    <mj-style>
      /* Light Mode Styles */
      .brand-primary { color: #14b8a6 !important; }
      .text-primary { color: #1f2937 !important; }
      .text-secondary { color: #6b7280 !important; }
      .bg-light { background-color: #f9fafb !important; }
      .bg-white { background-color: #ffffff !important; }
      .feature-box {
        background-color: #f0fdfa !important;
        border-radius: 8px !important;
        padding: 20px !important;
        margin-bottom: 12px !important;
      }

      /* Dark Mode Styles */
      @media (prefers-color-scheme: dark) {
        .dark-mode-bg { background-color: #111827 !important; }
        .dark-mode-card { background-color: #1f2937 !important; }
        .text-primary { color: #f3f4f6 !important; }
        .text-secondary { color: #9ca3af !important; }
        .bg-light { background-color: #1f2937 !important; }
        .bg-white { background-color: #111827 !important; }
        .brand-primary { color: #5eead4 !important; }
        .feature-box {
          background-color: #0f766e !important;
        }
      }
    </mj-style>

    <mj-style inline="inline">
      a { color: #14b8a6; text-decoration: none; }
      a:hover { color: #0d9488; }
      .footer-link { color: #6b7280; text-decoration: underline; }
    </mj-style>
  </mj-head>

  <mj-body background-color="#f9fafb" css-class="dark-mode-bg">

    <!-- Header -->
    <mj-section background-color="#ffffff" padding="24px 20px" css-class="dark-mode-card">
      <mj-column>
        <mj-image
          src="data:image/svg+xml;base64,"
      </mj-column>
    </mj-section>

    <!-- Hero Section -->
    <mj-section background-color="#14b8a6" padding="40px 40px">
      <mj-column>
        <mj-text font-size="32px" font-weight="700" color="#ffffff" line-height="1.3" align="center" padding-bottom="12px">
          Welcome to SaaS Platform! üéâ
        </mj-text>
        <mj-text font-size="18px" color="#f0fdfa" line-height="1.6" align="center">
          We're excited to have you on board, {userName}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Main Content -->
    <mj-section background-color="#ffffff" padding="40px 40px" css-class="dark-mode-card">
      <mj-column>

        <mj-text font-size="16px" color="#374151" line-height="1.7" padding-bottom="24px" css-class="text-primary">
          Thank you for joining <strong>{companyName}</strong>! Your account has been successfully created and you're ready to get started.
        </mj-text>

        <mj-text font-size="20px" font-weight="600" color="#1f2937" padding-bottom="20px" css-class="text-primary">
          Getting Started is Easy
        </mj-text>

      </mj-column>
    </mj-section>

    <!-- Feature Boxes -->
    <mj-section background-color="#ffffff" padding="0 40px 20px 40px" css-class="dark-mode-card">
      <mj-column>

        <!-- Step 1 -->
        <mj-text css-class="feature-box" padding="20px">
          <span style="font-size: 24px; margin-right: 8px;">üìä</span>
          <strong style="font-size: 16px; color: #1f2937;">Explore Your Dashboard</strong><br/>
          <span style="font-size: 14px; color: #6b7280;">Get an overview of your inventory, sales, and key metrics at a glance.</span>
        </mj-text>

        <!-- Step 2 -->
        <mj-text css-class="feature-box" padding="20px">
          <span style="font-size: 24px; margin-right: 8px;">üè≠</span>
          <strong style="font-size: 16px; color: #1f2937;">Set Up Your Warehouses</strong><br/>
          <span style="font-size: 14px; color: #6b7280;">Create and manage your warehouse locations and inventory efficiently.</span>
        </mj-text>

        <!-- Step 3 -->
        <mj-text css-class="feature-box" padding="20px">
          <span style="font-size: 24px; margin-right: 8px;">üíº</span>
          <strong style="font-size: 16px; color: #1f2937;">Manage Your Billing</strong><br/>
          <span style="font-size: 14px; color: #6b7280;">Create invoices, track payments, and manage your customers seamlessly.</span>
        </mj-text>

      </mj-column>
    </mj-section>

    <!-- CTA Section -->
    <mj-section background-color="#ffffff" padding="20px 40px 40px 40px" css-class="dark-mode-card">
      <mj-column>

        <mj-button
          href="{loginLink}"
          background-color="#14b8a6"
          color="#ffffff"
          font-size="16px"
          font-weight="600"
          border-radius="6px"
          padding="14px 40px"
        >
          Go to Dashboard
        </mj-button>

      </mj-column>
    </mj-section>

    <!-- Tips Section -->
    <mj-section background-color="#f9fafb" padding="32px 40px" css-class="bg-light">
      <mj-column>
        <mj-text font-size="16px" font-weight="600" color="#1f2937" padding-bottom="16px" css-class="text-primary">
          üí° Pro Tips
        </mj-text>
        <mj-text font-size="14px" color="#6b7280" line-height="1.7" css-class="text-secondary">
          ‚Ä¢ <strong>Customize your profile:</strong> Add your company logo and branding<br/>
          ‚Ä¢ <strong>Invite your team:</strong> Collaborate with team members and set permissions<br/>
          ‚Ä¢ <strong>Check out our docs:</strong> Visit the help center for guides and tutorials
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Support Section -->
    <mj-section background-color="#ffffff" padding="32px 40px" css-class="dark-mode-card">
      <mj-column>
        <mj-text font-size="14px" color="#6b7280" line-height="1.6" align="center" css-class="text-secondary">
          <strong>Need help getting started?</strong><br/>
          Our support team is here to help. Visit our <a href="{frontendUrl}/help" style="color: #14b8a6;">Help Center</a> or contact us at <a href="mailto:support@saasplatform.com" style="color: #14b8a6;">support@saasplatform.com</a>
        </mj:text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section padding="32px 20px 40px">
      <mj-column>

        <mj-text align="center" font-size="13px" color="#6b7280" padding-bottom="12px" css-class="text-secondary">
          <strong>SaaS Platform</strong>
        </mj-text>

        <mj-text align="center" font-size="12px" color="#9ca3af" line-height="1.8" css-class="text-secondary">
          <a href="{frontendUrl}/help" style="color: #6b7280; text-decoration: none; margin: 0 8px;">Help Center</a>
          <span style="color: #d1d5db;">‚Ä¢</span>
          <a href="{frontendUrl}/privacy" style="color: #6b7280; text-decoration: none; margin: 0 8px;">Privacy Policy</a>
          <span style="color: #d1d5db;">‚Ä¢</span>
          <a href="{frontendUrl}/terms" style="color: #6b7280; text-decoration: none; margin: 0 8px;">Terms</a>
        </mj-text>

        <mj-text align="center" font-size="11px" color="#9ca3af" padding-top="16px" css-class="text-secondary">
          You're receiving this email because you created an account with SaaS Platform.<br/>
          <a href="{frontendUrl}/unsubscribe" style="color: #6b7280; text-decoration: underline;">Unsubscribe</a> from welcome emails.
        </mj-text>

        <mj-text align="center" font-size="11px" color="#9ca3af" padding-top="12px" css-class="text-secondary">
          ¬© 2026 SaaS Platform. All rights reserved.
        </mj-text>

      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
