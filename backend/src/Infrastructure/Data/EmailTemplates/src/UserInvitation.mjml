<mjml>
  <mj-head>
    <mj-title>You've Been Invited - SaaS Platform</mj-title>
    <mj-preview>You've been invited to join a company on SaaS Platform. Accept your invitation to get started.</mj-preview>
    <mj-attributes>
      <mj-all font-family="'Segoe UI', 'Helvetica Neue', Arial, sans-serif" />
      <mj-text font-size="14px" color="#374151" line-height="1.6" />
    </mj-attributes>

    <mj-style>
      /* Light Mode Styles */
      .brand-primary { color: #14b8a6 !important; }
      .text-primary { color: #1f2937 !important; }
      .text-secondary { color: #6b7280 !important; }
      .bg-light { background-color: #f9fafb !important; }
      .bg-white { background-color: #ffffff !important; }
      .info-box {
        background-color: #eff6ff !important;
        border-left: 4px solid #3b82f6 !important;
        padding: 20px !important;
        border-radius: 4px !important;
      }

      /* Dark Mode Styles */
      @media (prefers-color-scheme: dark) {
        .dark-mode-bg { background-color: #111827 !important; }
        .dark-mode-card { background-color: #1f2937 !important; }
        .text-primary { color: #f3f4f6 !important; }
        .text-secondary { color: #9ca3af !important; }
        .bg-light { background-color: #1f2937 !important; }
        .bg-white { background-color: #111827 !important; }
        .brand-primary { color: #5eead4 !important; }
        .info-box {
          background-color: #1e3a8a !important;
          border-left: 4px solid #60a5fa !important;
        }
      }
    </mj-style>

    <mj-style inline="inline">
      a { color: #14b8a6; text-decoration: none; }
      a:hover { color: #0d9488; }
      .footer-link { color: #6b7280; text-decoration: underline; }
    </mj-style>
  </mj-head>

  <mj-body background-color="#f9fafb" css-class="dark-mode-bg">

    <!-- Header -->
    <mj-section background-color="#ffffff" padding="24px 20px" css-class="dark-mode-card">
      <mj-column>
        <mj-image
          src="data:image/svg+xml;base64,"
      </mj-column>
    </mj-section>

    <!-- Main Content -->
    <mj-section background-color="#ffffff" padding="40px 40px" css-class="dark-mode-card">
      <mj-column>

        <mj-text font-size="16px" color="#6b7280" padding-bottom="12px" css-class="text-secondary">
          Hello {inviteeName},
        </mj-text>

        <mj-text font-size="28px" font-weight="700" color="#1f2937" line-height="1.3" padding-bottom="20px" css-class="text-primary">
          You've Been Invited! ✨
        </mj-text>

        <mj-text font-size="16px" color="#374151" line-height="1.7" padding-bottom="24px" css-class="text-primary">
          <strong>{inviterName}</strong> has invited you to join <strong>{companyName}</strong> on SaaS Platform.
        </mj-text>

      </mj-column>
    </mj-section>

    <!-- Invitation Details Box -->
    <mj-section background-color="#ffffff" padding="0 40px 30px 40px" css-class="dark-mode-card">
      <mj-column>

        <mj-text css-class="info-box">
          <strong style="font-size: 15px; color: #1f2937;">Invitation Details</strong><br/><br/>
          <span style="color: #6b7280;">
            <strong>Company:</strong> {companyName}<br/>
            <strong>Invited by:</strong> {inviterName}<br/>
            <strong>Role:</strong> {role}
          </span>
        </mj-text>

      </mj-column>
    </mj-section>

    <!-- CTA Section -->
    <mj-section background-color="#ffffff" padding="0 40px 40px 40px" css-class="dark-mode-card">
      <mj-column>

        <mj-text font-size="16px" color="#374151" line-height="1.7" padding-bottom="24px" css-class="text-primary">
          Accept your invitation to start collaborating with your team and access all the platform features.
        </mj-text>

        <mj-button
          href="{invitationLink}"
          background-color="#14b8a6"
          color="#ffffff"
          font-size="16px"
          font-weight="600"
          border-radius="6px"
          padding="14px 40px"
          align="left"
        >
          Accept Invitation
        </mj-button>

        <mj-text font-size="14px" color="#6b7280" line-height="1.6" padding-top="24px" css-class="text-secondary">
          This invitation will expire in <strong>7 days</strong>. If you didn't expect this invitation, you can safely ignore this email.
        </mj-text>

        <!-- Alternative Link -->
        <mj-text font-size="13px" color="#9ca3af" line-height="1.6" padding-top="20px" css-class="text-secondary">
          If the button doesn't work, copy and paste this link into your browser:
        </mj-text>

        <mj-text font-size="12px" color="#14b8a6" line-height="1.6" padding-top="8px" css-class="brand-primary" font-family="'Courier New', monospace">
          {invitationLink}
        </mj-text>

      </mj-column>
    </mj-section>

    <!-- What's Included Section -->
    <mj-section background-color="#f9fafb" padding="32px 40px" css-class="bg-light">
      <mj-column>
        <mj-text font-size="16px" font-weight="600" color="#1f2937" padding-bottom="16px" css-class="text-primary">
          What's Included with Your Account
        </mj-text>
        <mj-text font-size="14px" color="#6b7280" line-height="1.8" css-class="text-secondary">
          ✓ Access to inventory management and warehouse tracking<br/>
          ✓ Billing and invoicing tools<br/>
          ✓ Real-time collaboration with your team<br/>
          ✓ Customizable reports and analytics<br/>
          ✓ Priority customer support
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Support Section -->
    <mj-section background-color="#ffffff" padding="32px 40px" css-class="dark-mode-card">
      <mj-column>
        <mj-text font-size="14px" color="#6b7280" line-height="1.6" css-class="text-secondary">
          <strong>Have questions?</strong> Our team is here to help. Visit our <a href="{frontendUrl}/help" style="color: #14b8a6; text-decoration: none;">Help Center</a> or contact us at <a href="mailto:support@saasplatform.com" style="color: #14b8a6; text-decoration: none;">support@saasplatform.com</a>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section padding="32px 20px 40px">
      <mj-column>

        <mj-text align="center" font-size="13px" color="#6b7280" padding-bottom="12px" css-class="text-secondary">
          <strong>SaaS Platform</strong>
        </mj-text>

        <mj-text align="center" font-size="12px" color="#9ca3af" line-height="1.8" css-class="text-secondary">
          <a href="{frontendUrl}/help" style="color: #6b7280; text-decoration: none; margin: 0 8px;">Help Center</a>
          <span style="color: #d1d5db;">•</span>
          <a href="{frontendUrl}/privacy" style="color: #6b7280; text-decoration: none; margin: 0 8px;">Privacy Policy</a>
          <span style="color: #d1d5db;">•</span>
          <a href="{frontendUrl}/terms" style="color: #6b7280; text-decoration: none; margin: 0 8px;">Terms</a>
        </mj-text>

        <mj-text align="center" font-size="11px" color="#9ca3af" padding-top="16px" css-class="text-secondary">
          You're receiving this invitation on behalf of {inviterName} at {companyName}.
        </mj-text>

        <mj-text align="center" font-size="11px" color="#9ca3af" padding-top="12px" css-class="text-secondary">
          © 2026 SaaS Platform. All rights reserved.
        </mj-text>

      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
