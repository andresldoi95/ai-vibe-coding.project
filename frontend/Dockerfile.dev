# Development Dockerfile (with hot reload)
FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=3000

# Start dev server with hot reload
CMD ["npm", "run", "dev"]
