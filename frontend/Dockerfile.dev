# Development Dockerfile (with hot reload)
FROM node:20-alpine

WORKDIR /app

# Install dependencies first (better layer caching)
COPY package.json package-lock.json* ./
RUN npm ci

# Copy application code
COPY . .

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=3000

# Start dev server with hot reload
CMD ["npm", "run", "dev"]
